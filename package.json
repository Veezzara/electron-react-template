{
  "name": "electron-react-template",
  "version": "1.0.0",
  "description": "",
  "main": "./src/main/main.ts",
  "scripts": {
    "start": "concurrently \"npm run start:preload\" \"npm run start:main\" \"npm run start:renderer\"",
    "start:preload": "cross-env NODE_ENV=development webpack --config ./config/webpack.preload.dev.ts",
    "start:renderer": "cross-env NODE_ENV=development webpack serve --config  ./config/webpack.renderer.ts",
    "start:main": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only .",
    "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
    "build:main": "cross-env NODE_ENV=production webpack --config ./config/webpack.main.ts",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./config/webpack.renderer.ts",
    "package": "ts-node ./utils/clean.ts && npm run build && electron-builder build --publish never"
  },
  "build": {
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@svgr/webpack": "^8.0.1",
    "@types/react": "^18.2.11",
    "@types/react-dom": "^18.2.4",
    "@types/webpack": "^5.28.1",
    "babel-loader": "^9.1.2",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron-builder": "^23.6.0",
    "electronmon": "^2.0.2",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^8.4.2",
    "rimraf": "^5.0.1",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "typescript-plugin-css-modules": "^5.0.1",
    "webpack": "^5.86.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "electron": "^25.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
